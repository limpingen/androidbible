<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />
    <include layout="@layout/main__activity_ayat" />
    <android.support.design.widget.TabLayout
        android:id="@+id/main__tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:tabGravity="center"
        app:tabIndicatorHeight="@dimen/default_margin_0_5"
        app:tabMode="scrollable">

    </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>
    <include layout="@layout/main__content" />
    <!--
        <android.support.design.widget.NavigationView
            android:id="@+id/main__activity__navview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:itemTextColor="@color/primary_text"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/main__activity__navheader"
            app:menu="@menu/main__drawer" />
    -->
</LinearLayout>


